<div class="jumbotron jumbotron-fluid text-center">
  <h1 class="display-4 pt-5 font-weight-bold text-center">Bienvenue sur Event-THP</h1>
</div>

<div class="col-12 text-center">
  <% @events.each do |event| %>
    <div class="card">
      <div class="card-body">
        <h5 class="mt-0 text-center"><%= event.title  %></h5>
        <p class="text-info"><%= event.start_date.strftime("%d %B %Y")%></p>
        <p>Le prix de cet événement sera de <%= event.price %> euros</p>
      </div>
    </div>
  <% end %>
</div>