<div class="view jarallax">
  <div class="mask rgba-indigo-slight">
    <div class="container h-100 d-flex justify-content-center align-items-center">
      <div class="row pt-5 mt-3">
        <div class="col-md-12 mb-3">
          <div class="intro-info-content text-center">
            <h1 class="display-3 blue-text mb-5 wow fadeInDown">
              Bonjour <%= @user.first_name %> !<br> Comment allez vous aujourd'hui ?
            </h1>
            <h5 class="text-uppercase blue-text mb-5 mt-1 font-weight-bold wow fadeInDown">HEUREUX DE VOUS REVOIR PARMI NOUS</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="text-center" style="margin-bottom: 25px;">
  <%= link_to "Ajouter un event", new_event_path , class: "btn btn-danger ", style: "margin-right: 20px" %>
  <%= link_to "Editer votre profil", edit_user_registration_path , class: "btn btn-warning " %>
</div>

<div class ='align-middle text-center'>
  <h6 class="withborder">Voici la liste de vos <strong>events</strong> :</h6>
      <% @events.each do |event| %>
        <div class="card">
          <div class="card-body">
            <h5 class="mt-0 text-center"><%= event.title  %></h5>
            <p class="card-text text-center"> <%= event.start_date.strftime("%d %B %Y") %></p>
          </div>
        </div>
    <% end %>
</div>